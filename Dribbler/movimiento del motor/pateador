#include <Servo.h>
Servo servo1;
   void patear (){
// va de 0째 a 180째
        for (int angulo = 0; angulo <= 180; angulo += 5) 
        servo1.write(angulo);
        delay(100);
        
    // va de 180째 a 0째
        for (int angulo = 180; angulo >= 0; angulo -= 5)
        servo1.write(angulo);
        delay(100);
  }
    void setup() {
        servo1.attach(6);
    }
    void loop() {
        patear();
        delay(100);
    }
  
