#include <Servo.h>
 Servo servo1;
    void setup() {
        servo1.attach(6);
    }
    void loop() {
  // va de 0° a 180°
        for (int angulo = 0; angulo <= 180; angulo += 5) 
        servo1.write(angulo);
        delay(100);
        
    // va de 180° a 0°
       
       
        for (int angulo = 180; angulo >= 0; angulo -= 5)
        servo1.write(angulo);
        delay(100);
  }
  
    
  void patear (){
// va de 0° a 180°
        for (int angulo = 0; angulo <= 180; angulo += 5) 
        servo1.write(angulo);
        delay(100);
        
    // va de 180° a 0°
       
       
        for (int angulo = 180; angulo >= 0; angulo -= 5)
        servo1.write(angulo);
        delay(100);
  
    
  }
  
