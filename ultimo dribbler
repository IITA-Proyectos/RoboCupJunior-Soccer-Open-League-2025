int IN1 = 8;
int IN2 = 9;
int ENA = 10; // pin PWM

String inputString = ""; // Para almacenar lo que llega por el puerto serial
bool detectarPelota = false;

void setup() {
  pinMode(IN1, OUTPUT);
  pinMode(IN2, OUTPUT);
  pinMode(ENA, OUTPUT);

  Serial.begin(9600); // Iniciar la comunicación serial
  Serial.println("Esperando 'pelota detectada'...");
}

void loop() {
  // Revisar si hay datos disponibles por el puerto serial
  if (Serial.available()) {
    inputString = Serial.readStringUntil('\n');
    inputString.trim(); // Eliminar espacios en blanco y saltos de línea

    if (inputString == "pelota detectada") {
      detectarPelota = true;
      Serial.println("Pelota detectada. Ejecutando movimiento...");
    }
  }

  if (detectarPelota) {
    // Adelante
    digitalWrite(IN1, HIGH);
    digitalWrite(IN2, LOW);
    analogWrite(ENA, 250); // velocidad (0–255)
    delay(2000);

    // Parar
    digitalWrite(IN1, LOW);
    digitalWrite(IN2, LOW);
    delay(1000);
  }
}


